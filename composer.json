{
    "name": "laravel/livewire-starter-kit",
    "description": "The official Laravel starter kit for Livewire.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "laravel",
        "framework"
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.1.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "peckphp/peck": "^0.1.3",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.2",
        "rector/rector": "^2.1"
    },
    "conflict": {
        "livewire/volt": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "check": [
            "@fmt:test",
            "@lint",
            "@refactor:test",
            "@typos"
        ],
        "ci": [
            "@lint:ci",
            "@fmt:test",
            "@refactor:test",
            "@test:ci",
            "@typos"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "fix": [
            "@refactor",
            "@fmt"
        ],
        "fmt": "vendor/bin/pint --parallel",
        "fmt:test": "vendor/bin/pint --test --parallel",
        "lint": "XDEBUG_MODE=off vendor/bin/phpstan analyze",
        "lint:ci": "XDEBUG_MODE=off vendor/bin/phpstan analyze --error-format=github",
        "lint:clear": "vendor/bin/phpstan clear-result-cache",
        "prep": [
            "@fix",
            "@check"
        ],
        "prepare": "git config core.hookspath .githooks",
        "refactor": "vendor/bin/rector process",
        "refactor:test": "vendor/bin/rector process --dry-run",
        "test": [
            "@php artisan config:clear --ansi",
            "@fmt",
            "XDEBUG_MODE=off vendor/bin/phpunit"
        ],
        "test:ci": [
            "@test:coverage",
            "@test:types"
        ],
        "test:coverage": [
            "@fmt",
            "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-clover coverage.xml"
        ],
        "typos": "vendor/bin/peck"
    },
    "$schema": "https://getcomposer.org/schema.json"
}
